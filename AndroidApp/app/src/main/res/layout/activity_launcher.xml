            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
